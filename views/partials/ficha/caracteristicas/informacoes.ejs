<!-- Informações -->
<div class="container">

    <br>
    <!-- Título da Ficha -->
    <div class="row align-items-center">
        <div class="col">
            <h2>Investigador</h2>
        </div>
        <div class="col text-center my-4">
            <button type="submit" class="btn btn-primary" style="background-color:#3a5f81; border-color: #3a5f81;">Salvar Ficha</button>
        </div>
    </div>
    <br>

    <div class="persona-info">
        <h3>Informações</h3>
        <div class="row">
            <div class="col 12 col-md-6">
                <div class="row">
                    <!-- Linha 1 -->
                    <div class="col-md-4">
                        <label for="persona-nome">Nome:</label>
                        <input type="text" name="informacoes.nome" id="persona-nome" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label for="persona-prof">Profissão:</label>
                        <input type="text" name="informacoes.profissao" id="persona-prof" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label for="persona-nasc">Naturalidade:</label>
                        <input type="text" name="informacoes.naturalidade" id="persona-nasc" class="form-control">
                    </div>
                </div>
                <div class="row mt-3">
                    <!-- Linha 2 -->
                    <div class="col-md-4">
                        <label for="persona-resid">Residência:</label>
                        <input type="text" name="informacoes.residencia" id="persona-resid" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label for="persona-prono">Pronome:</label>
                        <input type="text" name="informacoes.pronome" id="persona-prono" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label for="persona-idade">Idade:</label>
                        <input type="number" name="informacoes.idade" id="persona-idade" class="form-control" min="0">
                    </div>
                </div>
            </div>
        </div>
    </div>