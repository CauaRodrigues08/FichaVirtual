<!-- Informações -->
<div class="container">

    <br>
    <!-- Título da Ficha -->
    <div class="row align-items-center">
        <div class="col">
          <h2>Ficha de Investigador</h2>
        </div>
      
        <div class="col-auto text-end">
          <button 
            type="submit" 
            class="btn btn-primary me-2" 
            style="background-color:#3a5f81; border-color:#3a5f81;"
          >
            Salvar Ficha
          </button>
      
          <a 
            href="/" 
            class="btn btn-danger me-2" 
            style="background-color:#813a3a; border-color:#813a3a;"
          >
            Menu
          </a>
      
          <a 
            href="/fichas" 
            class="btn btn-secondary" 
            style="background-color:#4a4a4a; border-color:#4a4a4a;"
          >
            Fichas criadas
          </a>
        </div>
      </div>
      
    <br>

    <div class="persona-info">
        <h3>Informações</h3>
        <div class="row">
            <div class="col 12 col-md-6">
                <div class="row">
                    <!-- Linha 1 -->
                    <div class="col-md-4">
                        <label for="persona-nome">Nome:</label>
                        <input type="text" name="informacoes.nome" value="<%= informacoes?.nome ?? '' %>" id="persona-nome" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label for="persona-prof">Profissão:</label>
                        <input type="text" name="informacoes.profissao" value="<%= informacoes?.profissao ?? '' %>" id="persona-prof" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label for="persona-nasc">Naturalidade:</label>
                        <input type="text" name="informacoes.naturalidade" value="<%= informacoes?.naturalidade ?? '' %>" id="persona-nasc" class="form-control">
                    </div>
                </div>
                <div class="row mt-3">
                    <!-- Linha 2 -->
                    <div class="col-md-4">
                        <label for="persona-resid">Residência:</label>
                        <input type="text" name="informacoes.residencia" value="<%= informacoes?.residencia ?? '' %>" id="persona-resid" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label for="persona-prono">Pronome:</label>
                        <input type="text" name="informacoes.pronome" value="<%= informacoes?.pronome ?? '' %>" id="persona-prono" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label for="persona-idade">Idade:</label>
                        <input type="number" name="informacoes.idade" value="<%= informacoes?.idade ?? '' %>" id="persona-idade" class="form-control" min="0">
                    </div>
                </div>
            </div>
        </div>
    </div>