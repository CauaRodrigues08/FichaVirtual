<%- include('./partials/head') %>

<body class="bg-image-old-paper mt-5" style="overflow: hidden;">
<div class="container">
    <div class="row align-items-center">
        <div class="col">
            <h2>Fichas criadas</h2>
        </div>
        <div class="col text-center my-4">
            <a href="/" class="btn btn-danger" style="background-color: #813a3a; border-color: #813a3a;">Menu</a>
        </div>
    </div>
    <br>

    <% if (sheets.length > 0) { %>
        <% sheets.forEach(sheet => { %>
            <div class="row mb-3">
                <div class="col-12">
                    <a href="/fichas/<%= sheet._id %>" class="w-100 text-decoration-none">
                        <button class="btn btn-outline-dark w-100 d-flex flex-column align-items-start justify-content-center p-3">
                            <h3 class="text-start mb-1">Nome: <%= sheet.informacoes.nome %> </h3>
                            <p class="text-start mb-0">Id: <%= sheet._id %></p>
                        </button>
                    </a>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <h3>Parece que não há fichas por aqui.</h3>
    <% } %>
</div>
<%- include('./partials/footer') %>
